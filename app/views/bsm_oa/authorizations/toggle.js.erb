var elem     = $("bsm_oa_authorization_<%= @authorization.to_param %>_<%= params[:permission] %>"),
    included = <%= @authorization.permissions.include?(params[:permission]) %>,
    inClass  = "label-info",
    exClass  = "label-default";

elem
  .removeClass(inClass)
  .removeClass(exClass)
  .addClass(included ? inClass : exClass);
